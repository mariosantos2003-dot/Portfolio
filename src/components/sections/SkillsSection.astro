---
interface Props {
  title?: string;
}

const { title = "SKILLS" } = Astro.props;

const skills = [
  { name: "JavaScript", icon: "/js.svg" },
  { name: "MySQL", icon: "/mysql.svg" },
  { name: "React", icon: "/react.svg" },
  { name: "PHP", icon: "/php.svg" },
  { name: "Java", icon: "/java.svg" },
  { name: "Astro", icon: "/astro.svg" }
];
---

<section id="skills" class="mt-16 sm:mt-24 md:mt-40 lg:mt-60 mb-16 sm:mb-32 md:mb-64 lg:mb-100 w-full">
    <div class="flex justify-center mb-8 sm:mb-12 md:mb-16 lg:mb-20">
        <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-500 via-red-500 to-yellow-500 inline-block">
            {title}
        </h1>
    </div>

    <div class="relative rounded-2xl p-[2px] bg-gradient-to-r from-purple-500 via-red-500 to-yellow-500 hover:shadow-2xl hover:shadow-purple-600/30 transition ease-in-out duration-300 mx-3 sm:mx-6 md:mx-10 lg:mx-20 shadow-lg shadow-purple-600/30">
        <div class="relative bg-primary-dark rounded-2xl p-3 sm:p-4 md:p-6 lg:p-8">
            <!-- Grid que ocupa ancho completo pero mantiene altura compacta -->
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-6 gap-2 sm:gap-4 md:gap-6 lg:gap-8 relative">
                
                {skills.map(skill => (
                  <div class="flex flex-col items-center justify-center py-2 px-2">
                      <img 
                          src={skill.icon} 
                          alt={skill.name} 
                          class="w-8 h-8 sm:w-12 sm:h-12 md:w-16 md:h-16 lg:w-20 lg:h-20"
                      />
                      <p class="text-xs sm:text-sm md:text-base lg:text-lg mt-2 text-gray-300 text-center">{skill.name}</p>
                  </div>
                ))}
                
           
                
              
            </div>
        </div>
    </div>
</section>

<style>
/* Ajustar el grid para mantener altura compacta pero permitir ancho completo */
.grid {
margin-top: 50px;
margin-bottom: -80px;
  max-height: 180px; /* Altura base más proporcional al ancho completo */
}

/* Ajustes responsivos para diferentes tamaños de pantalla */
@media (max-width: 1024px) {
  .grid {
    max-height: 160px;
    margin-top: -10px;
    margin-bottom: -40px;
  }
}

@media (max-width: 768px) {
  .grid {
    max-height: 390px;
  
    margin-bottom: -20px;

  }
}

@media (max-width: 640px) {
  .grid {
    max-height: 310px;
    gap: 0.5rem;
    margin-bottom: 10px;
  }
  
  .grid > div {
    padding: 0.5rem;
  }
  
  .grid img {
    width: 24px;
    height: 24px;
  }
  
  .grid p {
    font-size: 0.65rem;
    margin-top: 0.25rem;
    line-height: 1;
  }
}

@media (max-width: 480px) {
  .grid {
    max-height: 90px;
  }
  
  .grid > div {
    padding: 0.25rem;
  }
  
  .grid img {
    width: 20px;
    height: 20px;
  }
  
  .grid p {
    font-size: 0.55rem;
    margin-top: 0.15rem;
  }
}
</style>