---
interface Props {
  title: string;
  columnClasses?: string;
  rowClasses?: string;
}

const { 
  title, 
  columnClasses = "col-span-1 sm:col-span-2 md:col-span-6 lg:col-span-10",
  rowClasses = "row-span-auto" 
} = Astro.props;
---

<div class={`${columnClasses} ${rowClasses} text-center my-3 sm:my-5 md:my-8 lg:my-12 text-transparent bg-clip-text bg-gradient-to-r from-purple-500 via-red-500 to-yellow-500`}>
  <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold">
    {title}
  </h2>
</div>