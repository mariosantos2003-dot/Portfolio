---
import BaseCard from './BaseCard.astro';
import { translations, type Language } from '../../i18n/translations';

interface Props {
  lang: Language;
  columnClasses?: string;
  rowClasses?: string;
}

const { 
  lang, 
  columnClasses = "col-span-1 sm:col-span-1 md:col-span-3 lg:col-span-5", 
  rowClasses = "row-span-auto md:row-span-2" 
} = Astro.props;

const t = translations[lang].experienceCard;
---

<BaseCard 
  title={t.title}
  columnClasses={`${columnClasses} experience-card`}
  rowClasses={rowClasses}
>
  <div class="experience-card-content h-full flex flex-col justify-between">
    <div class="mt-2">
      {t.jobs.map((job) => (
        <div class="mb-2 experience-job-item">
          <h4 class="text-xs sm:text-sm md:text-base text-left font-bold text-accent-purple">
            {job.title}
          </h4>
          <p class="text-xs sm:text-sm text-left text-gray-300">
            {job.company}
          </p>
          <div class="border-t border-accent-purple/20 my-1"></div>
        </div>
      ))}
    </div>
  </div>
</BaseCard>