---
import BaseCard from './BaseCard.astro';
import { translations, type Language } from '../../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = translations[lang].experienceCard;
---

<BaseCard 
  title={t.title}
  columnClasses="col-span-1 sm:col-span-1 md:col-span-3 lg:col-span-5 md:col-start-4 lg:col-start-6"
  rowClasses="row-span-auto md:row-span-4 md:row-start-5"
>
  {t.jobs.map((job, index, array) => (
    <>
      <div class="text-center mb-0.5 sm:mb-1">
        <h4 class="font-bold text-xs sm:text-sm md:text-base text-transparent bg-clip-text bg-gradient-to-r to-orange-600 from-red-200">{job.title}</h4>
        <p class="text-xs sm:text-sm">{job.company}</p>
      </div>

      {index < array.length - 1 && (
        <div class="w-full border-t border-gray-600 my-0.5"></div>
      )}
    </>
  ))}
</BaseCard>